<Application x:Class="ClanBattleGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClanBattleGame"
             StartupUri="View/MainWindow.xaml"
             xmlns:view="clr-namespace:ClanBattleGame.View.Pages"
             xmlns:vm="clr-namespace:ClanBattleGame.ViewModel"
             xmlns:core="clr-namespace:ClanBattleGame.Core">

    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:MainMenuVM}">
            <view:MainMenu/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:NewGameVM}">
            <view:NewGamePage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:HomeVM}">
            <view:HomePage/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:BattleVM}">
            <view:BattlePage/>
        </DataTemplate>

        <core:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Application.Resources>
    
</Application>
