<Window x:Class="ClanBattleGame.View.GameResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClanBattleGame.View"
        mc:Ignorable="d"
        Title="GameResult" Height="350" Width="280">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="{Binding ResultText}"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Статистика -->
        <StackPanel Grid.Row="1" Margin="0 20 0 20">
            <TextBlock Text="Вбито юнітів:"/>
            <TextBlock Text="{Binding UnitsKilled}"/>

            <TextBlock Text="Втрачено юнітів:" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding UnitsLost}"/>

            <TextBlock Text="Всього ходів:" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding Turns}"/>

            <TextBlock Text="Отримано грошей:" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding MoneyEarned}"/>
        </StackPanel>

        <!-- Кнопка повернення -->
        <Button Grid.Row="2"
                Height="35"
                Content="Повернутися"
                HorizontalAlignment="Center"
                Width="120"
                Command="{Binding ReturnCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>
