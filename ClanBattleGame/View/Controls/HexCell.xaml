<UserControl x:Class="ClanBattleGame.View.Controls.HexCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClanBattleGame.View.Controls"
             mc:Ignorable="d"
                     Width="70" Height="60">
    <Grid>
        <Polygon Points="35,0 70,17 70,43 35,60 0,43 0,17"
                 Stroke="Black"
                 StrokeThickness="1">
            <Polygon.Style>
                <Style TargetType="Polygon">
                    <!-- За замовчуванням -->
                    <Setter Property="Fill" Value="LightGray" />
                    <Style.Triggers>

                        <!-- Атака має найвищий пріоритет -->
                        <DataTrigger Binding="{Binding IsEnemyInRange}" Value="True">
                            <Setter Property="Fill" Value="#66FF0000"/>
                            <Setter Property="Stroke" Value="Red"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                        </DataTrigger>

                        <!-- Підсвічування руху -->
                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                            <Setter Property="Fill" Value="#88FFEA00"/>
                            <Setter Property="Stroke" Value="Orange"/>
                            <Setter Property="StrokeThickness" Value="2"/>
                        </DataTrigger>

                        <!-- Якщо клітинка обрана -->
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="Fill" Value="Orange" />
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Polygon.Style>

            <Polygon.InputBindings>
                <MouseBinding MouseAction="LeftClick"
                              Command="{Binding DataContext.SelectCellCommand,
                                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                              CommandParameter="{Binding}" />
                
                <MouseBinding MouseAction="RightClick"
              Command="{Binding DataContext.MoveCommand,
                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
              CommandParameter="{Binding}" />
            </Polygon.InputBindings>
        </Polygon>

        <!-- Іконка загону -->
        <Border Background="Transparent"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Text="{Binding Occupant.Name}"
                   Foreground="Black"
                   FontWeight="Bold"
                   FontSize="10"/>
        </Border>
    </Grid>
</UserControl>
