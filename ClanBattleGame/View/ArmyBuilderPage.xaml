<Page x:Class="ClanBattleGame.View.ArmyBuilderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClanBattleGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ArmyBuilderPage">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Армія 1 -->
        <StackPanel Grid.Column="0" Margin="10">

            <TextBlock Text="Army 1 (Elves)" FontSize="20"/>

            <ComboBox ItemsSource="{Binding UnitTypes}"
                  SelectedItem="{Binding SelectedUnitType1}"
                  Width="120"/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <Button Content="Add" Width="70" Command="{Binding AddUnit1Command}"/>
                <Button Content="Clone" Width="70" Margin="10 0" Command="{Binding CloneUnit1Command}"/>
                <Button Content="Remove" Width="80" Command="{Binding RemoveUnit1Command}"/>
            </StackPanel>

            <ListBox ItemsSource="{Binding Army1}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Width="120"/>
                            <TextBlock Text="HP:"/>
                            <TextBlock Text="{Binding Health}" Width="40"/>
                            <TextBlock Text="ATK:" Margin="10 0 0 0"/>
                            <TextBlock Text="{Binding Attack}" Width="40"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Армія 2 -->
        <StackPanel Grid.Column="1" Margin="10">

            <TextBlock Text="Army 2 (Dwarves)" FontSize="20"/>

            <ComboBox ItemsSource="{Binding UnitTypes}"
                  SelectedItem="{Binding SelectedUnitType2}"
                  Width="120"/>

            <StackPanel Orientation="Horizontal" Margin="0 10">
                <Button Content="Add" Width="70" Command="{Binding AddUnit2Command}"/>
                <Button Content="Clone" Width="70" Margin="10 0" Command="{Binding CloneUnit2Command}"/>
                <Button Content="Remove" Width="80" Command="{Binding RemoveUnit2Command}"/>
            </StackPanel>

            <ListBox ItemsSource="{Binding Army2}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Width="120"/>
                            <TextBlock Text="HP:"/>
                            <TextBlock Text="{Binding Health}" Width="40"/>
                            <TextBlock Text="ATK:" Margin="10 0 0 0"/>
                            <TextBlock Text="{Binding Attack}" Width="40"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </Grid>
</Page>
