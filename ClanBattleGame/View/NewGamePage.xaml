<Page x:Class="ClanBattleGame.View.NewGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClanBattleGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewGamePage"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center">
            <TextBlock Text="Введіть назву вашого клану:" Margin="10"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Orientation="Vertical"
            HorizontalAlignment="Center">
                <TextBlock Text="Oберіть расу:" Margin="10"/>
                <ComboBox/>
            </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 20"
                            Height="60">
                <Button Content="Назад"
                        Margin="10"
                        Width="100"/>
                    
                <Button Content="Далі"
                        Margin="0 10 10 10"
                        Width="100"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
