<Page x:Class="ClanBattleGame.View.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ClanBattleGame.View.Pages"
      xmlns:card="clr-namespace:ClanBattleGame.View.Cards"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel
                Orientation="Horizontal" VerticalAlignment="Center"
                HorizontalAlignment="Center" Margin="20 0">
                <TextBlock Margin="0 0 150 0">
                    <Run Text="Назва клану: "/>
                    <Run Text="{Binding ClanName}"/>
                </TextBlock>
                <TextBlock Margin="0 0 150 0">
                    <Run Text="Раса: "/>
                    <Run Text="{Binding Race}"/>
                </TextBlock>
                <TextBlock Margin="0 0 150 0">
                    <Run Text="Гроші: "/>
                    <Run Text="{Binding Money}"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Бої: "/>
                    <Run Text="{Binding Fights}"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Магазин"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Top">
                        <TextBlock Text="Покращити бійця"/>
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <TextBlock Text="ATK +1"/>
                            <TextBlock Text="{Binding UpgradeATKCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding UpgradeATK}" Width="25"/>
                            <Button Content="-" Command="{Binding DowngradeATK}" Width="25"/>
                        </StackPanel>

                        <StackPanel Margin="10" Orientation="Horizontal">
                            <TextBlock Text="HP +10"/>
                            <TextBlock Text="{Binding UpgradeHPCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding UpgradeHP}" Width="25"/>
                            <Button Content="-" Command="{Binding DowngradeHP}" Width="25"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Grid.Column="1">
                        <TextBlock Text="Додати загін" HorizontalAlignment="Center"/>
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <TextBlock Text="Кількість загонів +1"/>
                            <TextBlock Text="{Binding AddSquadCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding AddSquadCommand}" Width="25"/>
                            <Button Content="-" Command="{Binding RemoveSquadCommand}" Width="25"/>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <TextBlock Text="+1 Archer"/>
                            <TextBlock Text="{Binding AddArcherCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding AddArcherCommand}" Width="25"/>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <TextBlock Text="+1 Light Unit"/>
                            <TextBlock Text="{Binding AddLightCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding AddLightCommand}" Width="25"/>
                        </StackPanel>

                        <StackPanel Margin="5" Orientation="Horizontal">
                            <TextBlock Text="+1 Heavy Unit"/>
                            <TextBlock Text="{Binding AddHeavyCost, StringFormat='Ціна: {0}'}"/>
                            <Button Content="+" Command="{Binding AddHeavyCommand}" Width="25"/>
                        </StackPanel>
                        <Button Content="Видалити бійця" Command="{Binding DeleteUnitCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10" Grid.Row="1">
                        <TextBlock Text="Лідер клану" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

                        <card:UnitCard DataContext="{Binding Leader}"
                                       Height="120" Width="150" BorderColor="Gold"/>
                    </StackPanel>
                        <Button Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Bottom"
                                Height="25"
                                Content="До бою!" Command="{Binding GoBattleCommand}"/>
                </Grid>
            </Grid>

            <Grid Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="3" Margin="0 0 220 0">
                    <TextBlock Text="Юніти обраного загону:"/>
                    <ListBox ItemsSource="{Binding Units}"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectedItem="{Binding SelectedUnit}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <card:UnitCard DataContext="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Склад армії" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="1" Text="{Binding LeaderName}"/>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="Загони:"/>
                    <ListBox ItemsSource="{Binding Squads}"
                             SelectedItem="{Binding SelectedSquad}"
                             BorderThickness="0"
                             Background="Transparent">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <card:SquadCard/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!--<ScrollViewer  Grid.Row="2" Grid.Column="1"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Disabled"
                               Margin="5">
                    <TextBlock Text="{Binding ClanInfoLog}"
                               TextWrapping="Wrap"
                               FontFamily="Consolas"
                               FontSize="12"/>
                </ScrollViewer>-->



            </Grid>
        </Grid>
    </Grid>
</Page>
